<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:com="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/elassona">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome!"
        android:textColor="@android:color/white"
        android:textSize="32dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CommonTasker contributing in the commons!"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="22dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />
    <TextView
        android:textStyle="bold"
        android:padding="10dp"
        com:innerShadowDy="2dp"
        com:innerShadowColor="#FF000000"
        com:innerShadowRadius="1dp"
        com:outerShadowDy="3dp"
        com:outerShadowColor="#FF0088ff"
        com:outerShadowRadius="10dp"
        com:strokeColor="#FFff0000"
        com:strokeJoinStyle="miter"
        com:strokeWidth="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Becoming a group!"
        android:textColor="@color/light_font"
        android:id="@+id/textView3"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="3.0"
        android:gravity="center"
        android:textSize="32dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textColor="@android:color/white"
        android:textSize="26dp"
        android:background="@android:color/holo_orange_dark"
        android:id="@+id/button"
        android:gravity="center"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How does it work?"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:background="#80000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button15" />

</RelativeLayout>
